<!DOCTYPE html>
<html >
  <head>
    <meta charset="UTF-8">
    <title>Sign Up </title>   
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <link rel="shortcut icon" href="img/favicon.ico">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/Login.css">   
    <script type="text/javascript" src="js/Login.js"></script>
  </head>

  <body>
    <!-- Loading screen -->
    <div class="loader-wrap">
      <div class="loader">
        <div class="box-1 box"></div>
        <div class="box-2 box"></div>
        <div class="box-3 box"></div>
        <div class="box-4 box"></div>
        <div class="box-5 box"></div>
      </div>
    </div>

    <div class="wrap button-hover">
      <div class="avatar img-hover">
        <img onmousedown="return false" onmouseup="return this.onclick() || this.click()" src="img/signinup/SignupLogo.png">
    	</div> 

      <!-- submit to /login -->
      <form action="/signup" method="post">
    		<input type="text" placeholder="username" name="username" required>
    		<div class="bar">
    			<i></i>
    		</div>
    		<input id="email" type="text" placeholder="email" name="email" required>
        <div class="bar">
          <i></i>
        </div>
        <input type="password" placeholder="password" name="password" required>
    		<!-- <a href="" class="forgot_link">forgot ?</a> -->

        <!-- Sign In button -->
        <div class="signin">
          <button type="submit" name="action" class="btn btn-warning btn-lg">Sign Up</button>
        </div>

         <!-- display the error message here -->
        <div class="errormess">
          <p> 
            <% if(typeof(errorMessage) !== 'undefined') {%>
                <span><%= errorMessage %></span>
            <% } %>
          </p>
        </div> 
    	</form>

      <!-- Optional -->
      <div class="container">
        <div class="row vertical-align">
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 option1">
            <a href="/login">
              <button>Sign In</button>
            </a>
          </div> 

          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 option1">
            <a href="/">
              <button>Main</button>
            </a>            
          </div> 
        </div>  
      </div>
  	</div>      
  </body>
</html>
